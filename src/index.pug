                    .address__map
                        picture
                            source(srcset="assets/images/map/1.webp") 
                            img(src="assets/images/map/1.jpg", alt="карта")     
            
        include pug/__footer.pug
        
        script(src="assets/js/ibg.js")
        script(src="assets/js/header.js")  
        script(src="assets/js/jquery-3.6.0.min.js")
        script(src="assets/js/slick.min.js")
        script(src="assets/js/script.js") 