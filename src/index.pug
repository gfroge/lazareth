doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="assets/css/style.css")
        link(rel="shortcut icon", href="assets/images/favicon.ico", type="image/x-icon")
        title Лазарет центр
    body
        include pug/__header.pug

        main.main
            mixin aside-nav-option(gotoClass,text)
                .nav__section 
                    .nav__text.active=text 
                    a(href="" data-goto=gotoClass).nav__bullet.active
            aside.nav
                .nav__options
                    +aside-nav-option('.about','О Нас')
                    +aside-nav-option('.facility','Наши Услуги')
                    +aside-nav-option('.doctors','Врачи')
                    +aside-nav-option('.testimonials','Отзывы')
                    +aside-nav-option('.address','Адреса клиник')
                button.nav__up
                    include pug/svg/arrow.svg   
                    
            .container.large.start__wrapper
                section.start
                    .start__image 
                        picture
                            source(srcset="assets/images/start.webp") 
                            img(src="assets/images/start.png", alt="") 
                    .container.large.start__container
                        h1.start__title.text-primary Бережем Ваше здоровье
                        .start__subtitle.text-secondary Только доказательная медицина и квалифицированные врачи
                        .searchbar__wrap
                            form.searchbar.default-light
                                input(type="text" placeholder="Введите нужного специалиста...").searchbar__input.text-field.default-light
                                button.searchbar__button.secondary-main Поиск
                            ul.searchbar__result.default-light.text-secondary._hidden
                                li.searchbar__option Терапевт
                                li.searchbar__option Гинеколог
                                li.searchbar__option Хирург
                                li.searchbar__option Стоматолог
                                li.searchbar__option УЗИ         

            mixin about-stat(num, name)
                .about-stat
                    h4.about-stat__title.text-primary=num 
                    .about-stat__name=name

            .container.large.about__wrapper 
                section.about
                    .about__circle
                        .about__circle-text О Нас    
                        picture.about__image
                            source(srcset="assets/images/about.webp") 
                            img(src="assets/images/about.jpg", alt="")
                    .about__info 
                        h2.about__title.text-primary.h2 Работаем без выходных уже 5 лет
                        .about__stats 
                            +about-stat('3', 'Клиники')
                            +about-stat('52', 'Врача')
                            .about__main-stat
                                h4.about__main-stat-title.text-primary 7
                                .about__main-stat-subtitle.text-secondary Дней в неделю
                        .about__subtitle.text-secondary Свое здоровье нам доверили уже более 6000 пациентов  

            mixin facility-slide(path,alt='услуга',title,desc,popTitle,popOptions,popPrices,popTimetable)
                .facility-slide
                    .facility-slide__image.ibg
                        picture
                            source(srcset=`${path}.webp`) 
                            img(src=`${path}.jpg`, alt=alt) 
                    .facility-slide__info
                        .facility-slide__text
                            h5.facility-slide__title.text-primary=title
                            .facility-slide__description.text-secondary=desc
                        button.facility-slide__btn.green-button Подробнее
                    .facility-slide__popup.facility-popup
                        h5.facility-popup__title.text-primary=popTitle
                        ul.facility-popup__options 
                            - for (var i = 0; i < popOptions.length; i++)
                                li 
                                    =popOptions[i]
                                    strong 
                                        =popPrices[i]
                        ul.facility-popup__timetable
                            li
                                strong Пн:
                                =` ${popTimetable[0]}`
                            li
                                strong Вт:
                                =` ${popTimetable[1]}`
                            li
                                strong Ср:
                                =` ${popTimetable[2]}`
                            li
                                strong Чт:
                                =` ${popTimetable[3]}`
                            li
                                strong Пт:
                                =` ${popTimetable[4]}`
                            li
                                strong Сб:
                                =` ${popTimetable[5]}`
                            li
                                strong Вс:
                                =` ${popTimetable[6]}`
                        button.facility-popup__btn.green-button Назад

            
            .container.large.facility__wrapper
                img(src="assets/images/perfo.svg", alt="").facility__perfo
                section.facility 
                    h2.h2.blue.facility__title Наши Услуги
                    .slider.facility__slider
                        .slider__item 
                            +facility-slide('assets/images/facility/uzi','узи',
                        'УЗИ','УЗИ любых внутренних органов (без консультации врача)',
                        'Клиника 1', ['Обследование:','Консультация врача:'], ['5000₽','2000₽ (-15% при обследовании у нас)'],
                        ['12:00-14:00','12:00-14:00','12:00-14:00','12:00-14:00','14:00-16:00', '10:00-12:00','10:00-12:00'])
                        .slider__item
                            +facility-slide('assets/images/facility/terapevt','терапевт',
                        'Терапевт','Обследование, назначение лечения или анализов по жалобам пациента',
                        'Клиника 1, 2, 3', ['Консультация врача:'], ['1000₽'],
                        ['11:00-16:00','11:00-16:00','11:00-16:00','-','-', '10:00-12:00','10:00-12:00'])
                        .slider__item
                            +facility-slide('assets/images/facility/ginekolog','гинеколог',
                        'Гинеколог','Консультация и/или обследование',
                        'Клиника 2', ['Консультация врача:','Взятие мазка:'], ['2000₽','1000₽'],
                        ['14:00-18:00','-','12:00-14:00','-','14:00-16:00', '-','-'])
                        .slider__item
                            +facility-slide('assets/images/facility/surgery','хирург',
                        'Хирург','Переломы, вывихи, порезы, ожоги и другие травмы',
                        'Клиника 1,2', ['Обследование:','Наложение/Снятие гипса:','Обработка порезов, ожогов, вывихов'], ['1000₽','1500₽','1800₽'],
                        ['12:00-14:00','12:00-14:00','12:00-14:00','12:00-14:00','14:00-16:00', '10:00-12:00','10:00-12:00'])
                        .slider__item
                            +facility-slide('assets/images/facility/dentist','стоматолог',
                        'Стоматолог (Ортодонт)','Профилактика и лечение зубо-челюстных аномалий',
                        'Клиника 3', ['Обследование и чистка:','Лечение одного зуба и установка пломбы:'], ['2000₽','5000₽'],
                        ['-','-','12:00-18:00','12:00-18:00','12:00-18:00', '-','-'])
                        .slider__item
                            +facility-slide('assets/images/facility/dentist','стоматолог',
                        'Стоматолог (Хирургия)','Удаление зубов, установка имплантов, лечение воспалительных процессов',
                        'Клиника 3', ['Обследование:','Импланты зубов:','Лечение воспалительных процессов:','Удаление одного зуба:'], ['1000₽','Цена сообщается индивидуально после обследования','2000₽','2000₽'],
                        ['12:00-18:00','12:00-14:00','12:00-18:00','12:00-14:00','-', '-','-'])
                        

            mixin doc-card(src,alt,name,job,rating,exp,dataJob)
                div(data-job=dataJob).doc-card._visible
                    .doc-card__photo.ibg
                            picture
                                source(srcset=`${src}.webp`) 
                                img(src=`${src}.jpg`, alt=alt)
                    .doc-card__text   
                        .doc-card__name.text-primary=name 
                        .doc-card__job.text-secondary=job 
                    .doc-card__stats-wrap 
                        .doc-card__stats
                            .doc-card__rating.text-secondary
                                include pug/svg/thumbsup.svg
                                =rating 
                            .doc-card__experience.text-secondary
                                include pug/svg/job.svg
                                =exp

            .container.large.doctors__wrapper
                section.doctors
                    .doctors__menu
                        h2.h2.doctors__title Наши лучшие врачи
                        ul.doctors__list
                            - let arr = ["Все", 'Терапевты', 'Гинекологи', 'Хирурги', 'Стоматологи', 'Врачи УЗДГ']
                            - let dataSet = ["any","therapist",'gynecologist','surgeon','dentist','ultrasound'] 
                            - for (var i = 0; i < arr.length; i++)
                                if (i > 0)
                                    li(data-job=dataSet[i]).doctors__li
                                        =arr[i]
                                else 
                                    li(data-job=dataSet[0]).doctors__li.active
                                        strong 
                                            =arr[i]
                    .doctors__content
                        +doc-card('assets/images/docs/1','фото врача','Лебедев Грирорий Николаевич','Хирург','100%','25 лет опыта','surgeon')
                        +doc-card('assets/images/docs/5','фото врача','Петрова Жанна Алексеевна','Врач УЗДГ','95%','19 лет опыта','ultrasound')
                        +doc-card('assets/images/docs/2','фото врача','Семёнов Олег Александрович','Терапевт','95%','15 лет опыта','therapist')
                        +doc-card('assets/images/docs/6','фото врача','Шубин Сергей Дмитриевич','Стоматолог','90%','17 лет опыта','dentist')
                        +doc-card('assets/images/docs/4','фото врача','Антонова Любовь Сергеевна','Гинеколог','100%','14 лет опыта','gynecologist')
                        +doc-card('assets/images/docs/3','фото врача','Иванов Андрей Андреевич','Стоматолог','95%','20 лет опыта','dentist')

            mixin slider__item(text, starsNum, name, src)
                .slider__item
                    .slider__item.testimonial
                        .testimonial__text.text-primary=text 
                        //- make number depandant on stars number
                        .testimonial__stars=starsNum   
                        .testimonial__user   
                            .testimonial__name.text-primary=name 
                            .testimonial__avatar.ibg
                                picture
                                    source(srcset=`${src}.webp`) 
                                    img(src=`${src}.jpg`, alt="фото")
            
            .container.large.testimonials__wrapper 
                section.testimonials
                    h2.testimonials__title.h2.blue Отзывы
                    .testimonials__slider.slider
                        +slider__item('Хочу сказать большое Спасибо врачу Шубину Сергею Дмитриевичу! Вылечил зуб, с которым не могли помочь 3 разных врача из государственных поликлиник!', 5, 'Alex022',
                         "assets/images/testimonials/default")
                        +slider__item('Жанна Алексеевна отлично сделала узи! Лечащий врач сказал, что на снимках все отлично видно, и теперь можно поставить правильный диагноз', 5, 'Аня',
                         "assets/images/testimonials/1")
                        +slider__item('Приветливый персонал, красивые и чистые кабинеты. Правда к врачам порой приходится записываться за много дней, но ожидание того стоит', 4, 'Сергей',
                         "assets/images/testimonials/2")
                        +slider__item('Всегда хожу лечить зубы только в эту клинику', 5, 'Sonya1452',                   
                        "assets/images/testimonials/default")
                        +slider__item('Сергей Дмитриевич самый лучший стоматолог, которого я только видела. Сначала расстроил диагнозом, а потом назвал цену лечения и сразу стало легче на душе',
                         4, 'Анила',"assets/images/testimonials/default")
                .appointment 
                    .appointment__text
                        h4.appointment__title.text-primary Запишитесь к врачу в два клика
                        .appointment__subtitle.text-primary Скидка -15% на первый прием!
                    a(href="404.html").appointment__link.primary-main Записаться

            mixin address__address-block(title,phone,email,location,src)
                .address__address-block.address-block
                    h5.address-block__title=title
                    .address-block__contacts
                        a(href="" type="phone").address-block__phone.link-underline=phone 
                        a(href="" type="email").address-block__email.link-underline=email 
                        a(href=src).address-block__location.link-underline=location 


            .container.large.address__wrapper
                section.address
                    .address__info
                        h2.h2.address__title Наши клиники
